{
  "name": "ones",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@cloudflare/workers-types": "^4.20251213.0",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "alchemy": "^0.82.1",
      "@orpc/client": "^1.12.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "drizzle-orm": "^0.45.1"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @ones/db db:push",
    "db:generate": "turbo -F @ones/db db:generate",
    "deploy": "turbo -F @ones/infra deploy",
    "destroy": "turbo -F @ones/infra destroy"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@ones/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "@ones/config": "workspace:*",
    "@cloudflare/workers-types": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "bun@1.3.5"
}
